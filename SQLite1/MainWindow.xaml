<Window x:Class="SQLite1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLite1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="ShowTextButton" Content="Show" HorizontalAlignment="Left" Height="34" Margin="505,0,0,0" VerticalAlignment="Center" Width="101" Click="ShowTextButton_Click"/>
        <Button x:Name="AddButton" Content="AddData" HorizontalAlignment="Left" Height="34" Margin="505,141,0,0" VerticalAlignment="Top" Width="100" Click="AddButton_Click"/>
        <TextBox x:Name="FirstnameBox" HorizontalAlignment="Left" Height="24" Margin="149,141,0,0" Text="Firstname" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
        <TextBox x:Name="LastnameBox" HorizontalAlignment="Left" Height="24" Margin="149,182,0,0" Text="Lastname" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>
        <TextBox x:Name="emailBox" HorizontalAlignment="Left" Height="24" Margin="149,217,0,0" Text="email" TextWrapping="Wrap" VerticalAlignment="Top" Width="213"/>

    </Grid>
</Window>
